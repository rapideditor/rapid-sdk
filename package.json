{
  "name": "id-sdk",
  "version": "3.0.0-pre.1",
  "description": "Map editing made easy",
  "homepage": "https://github.com/ideditor/id-sdk#readme",
  "repository": "github:ideditor/id-sdk",
  "license": "ISC",
  "contributors": [
    "Ben Clark <clarkben@fb.com> (https://github.com/bonkles)",
    "Bryan Housel <bhousel@gmail.com> (https://github.com/bhousel)",
    "Danny Krause (https://github.com/vanreece)",
    "Milos Brzakovic <mbrzakovic@microsoft.com> (https://github.com/mbrzakovic)"
  ],
  "keywords": [
    "map",
    "editor"
  ],
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "@types/d3-polygon": "^3.0.0",
    "@types/geojson": "^7946.0.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.3.2",
    "esbuild": "~0.12.8",
    "esbuild-jest": "~0.5.0",
    "esbuild-node-externals": "~1.3.0",
    "jest": "^27.0.4",
    "jest-extended": "^0.11.2",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^2.3.0",
    "shx": "^0.3.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "all": "run-s clean build pretty",
    "build": "lerna run build",
    "clean": "lerna run clean --parallel",
    "esbuild": "lerna run esbuild",
    "pretty": "prettier --write \"./**/*.ts\"",
    "test": "lerna run test",
    "tsc": "lerna run tsc"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageDirectory": "<rootDir>/.coverage",
    "extensionsToTreatAsEsm": [".ts"],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/*.test.(ts|js)"
    ],
    "transform": {
      "^.+\\.ts$": ["esbuild-jest", {
        "format": "esm",
        "sourcemap": "true"
      }]
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
